[
  {
    "id": "deploy-revenue-dashboard",
    "execute-command": "/home/pi/projects/revenue_dashboard/deploy.sh",
    "command-working-directory": "/home/pi/projects/revenue_dashboard",
    "response-message": "Deployment triggered",
    "trigger-rule": {
      "match": {
        "type": "payload-hmac-sha256",
        "secret": "your-webhook-secret-here-change-this",
        "note": "Webhook URL: http://192.168.1.88:9000/hooks/deploy-revenue-dashboard",
        "parameter": {
          "source": "header",
          "name": "X-Hub-Signature-256"
        }
      },
      "and": [
        {
          "match": {
            "type": "value",
            "value": "refs/heads/main",
            "parameter": {
              "source": "payload",
              "name": "ref"
            }
          }
        }
      ]
    }
  }
]

